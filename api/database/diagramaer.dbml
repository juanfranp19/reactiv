// Use DBML to define your database structure
// Docs: https://dbml.dbdiagram.io/docs

Table users {
  id int [pk]
  name string [unique]
  password string
  rememberToken string
}

Table socios {
  id int [pk]
  dni string [unique]
  nombre string
  apellidos string
  email string [unique]
  telefono int [unique]
  fecha_nac date
  user_id int [unique, ref:- users.id]
}

Table entrenadores {
  id int [pk]
  nombre string [unique]
  email string [unique]
  telefono int [unique]
  user_id int [unique, ref:- users.id]
}

Table ejercicios {
  id int [pk]
  nombre string [unique]
  descripcion text
  imagen string [unique]
  grupo_id string [ref:- grupos_musculares.id]
}

Table tarifas {
  id int [pk]
  nombre string [unique]
  descripcion string
  duracion integer
  precio decimal
}

Table productos {
  id int [pk]
  nombre string [unique]
  descripcion text
  precio decimal
}

Table socios_tarifas {
  socio_id int [unique, ref:> socios.id]
  tarifa_id int [ref:> tarifas.id]
  fecha_inicio date
  fecha_fin date
}

Table rutinas {
  ejercicio_id int [ref:> ejercicios.id]
  socio_id int [ref:> socios.id]
  num_series int
  num_repeticiones int

  indexes {
    (ejercicio_id, socio_id) [unique, name: "UNQ_ejercicio_socio"]
  }
}

Table seguimientos {
  ejercicio_id int [ref:> ejercicios.id]
  socio_id int [ref:> socios.id]
  fecha date
}

Table taquillas {
  id int [pk]
  socio_id int [null, unique, ref:-socios.id]
  fecha_compra datetime [null]
}

Table productos_socios {
  producto_id int [ref:> productos.id]
  socio_id int [ref:> socios.id]
  fecha_compra datetime
  cantidad int
}

Table accesos {
  id int [pk]
  hora_entrada datetime
  hora_salida datetime
  socio_id int [ref:> socios.id]
}

Table grupos_musculares {
  id int [pk]
  nombre string [unique]
}
